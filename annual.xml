<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:background="#69ffffff"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:elevation="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        card_view:cardCornerRadius="4dp"
        android:backgroundTint="#40ffffff"
        android:backgroundTintMode="multiply"
        android:clickable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="April 2013-March 2014"
                android:layout_marginLeft="10dp"
                android:textSize="24sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Number of days : "
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/totaldays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:text="260"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Number of days attended : "
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/totaldaysa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:text="243"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Number of days unattended : "
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/totaldaysua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:text="17"
                android:textSize="20sp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
